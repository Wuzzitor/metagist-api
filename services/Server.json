{
    "name": "Server",
    "apiVersion": "0.1",
    "description": "Metagist Server Client",
    "operations": {
        "package": {
            "httpMethod": "GET",
            "uri": "package/{author}/{name}",
            "summary": "Returns info on a package, creates the package if necessary.",
            "responseClass": "\\Metagist\\Api\\PackageResponse",
            "parameters": {
                "author": {
                    "description": "Package author/owner name",
                    "type": "string",
                    "location": "uri"
                },
                "name": {
                    "description": "Name of the package.",
                    "type": "string",
                    "location": "uri"
                }
            }
        },
        "pushInfo": {
            "httpMethod": "POST",
            "uri": "pushInfo/{author}/{name}",
            "summary": "Provides metainfo for a package",
            "parameters": {
                "author": {
                    "description": "Package author/owner name",
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "name": {
                    "description": "Name of the package.",
                    "type": "string",
                    "location": "uri",
                    "required": true
                },
                "info": {
                    "description": "Metainfo",
                    "type"      : "object",
                    "instanceOf": "Metagist\\MetaInfo",
                    "location"  : "body",
                    "required"  : true,
                    "sentAs"    : "json",
                    "properties": {
                        "category": {
                            "type": "string",
                            "description": "The information category.",
                            "required": true
                        },
                        "group": {
                            "type": "string",
                            "description": "The information group under the category.",
                            "required": true
                        },
                        "value": {
                            "type": "string",
                            "description": "The information content.",
                            "required": true
                        },
                        "version": {
                            "type": "string",
                            "description": "Optional version number"
                        }
                    }
                }
            }
        }
    },
    "models": {}
}