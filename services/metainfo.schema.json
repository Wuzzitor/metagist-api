{
    "type"      : "object",
    "$schema"   : "http://json-schema.org/draft-03/schema",
    "name"      : "metaInfo",
    "id"        : "http://metagist.org/metaInfo",
    "properties": {
        "group": {
            "type": "string",
            "id": "http://metagist.org/metaInfo/group"
        },
        "value": {
            "type": ["string", "number", "integer", "boolean"],
            "id": "http://metagist.org/metaInfo/value"
        },
        "version": {
            "type": "string",
            "id": "http://metagist.org/metaInfo/version"
        }
    },
    "required": ["group", "value"]
}
