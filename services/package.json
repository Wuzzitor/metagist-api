{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "name": "package",
    "properties": {
        "id": {
            "type": "integer",
            "required": true
        },
        "identifier": {
            "type": "string",
            "required": true
        },
        "type": {
            "type": "string"
        },
        "versions": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "required": true
        },
        "description": {
            "type": "string",
            "required": true
        },
        "time_updated": {
            "type": "string",
            "required": true
        },
        "metaInfos": {
            "type": "array",
            "items": {
                "type": "object",
                "ref": "metaInfo"
            },
            "required": true
        }
    }
}
