{
    "name"        : "wuzzitor/metagist-api",
    "type"        : "library",
    "description" : "Metagist API libraries",
    "homepage"    : "http://metagist.org",
    "keywords"    : ["metagist", "api"],
    "license"     : "MIT",
    "authors"     : [
        {
            "name"  : "Daniel Pozzi",
            "email" : "bonndan76@googlemail.com"
        }
    ],
    "require": {
        "php"                       : ">=5.3.3",
        "guzzle/guzzle"             : "v3.7.0",
        "monolog/monolog"           : "~1.0",
        "jms/serializer"            : "0.12.0",
        "justinrainbow/json-schema" : "1.3.2"
    },
    "require-dev": {
        "silex/silex"           : "1.0.*@dev",
        "wuzzitor/metagist.org" : "0.1.0",
        "doctrine/common"       : "2.3.0"
    },
    "autoload": {
        "psr-0": {
            "Metagist\\Api\\Guzzle\\Plugin"     : "src/",
            "Metagist\\Api"     : "src/",
            "Metagist"          : "vendor/wuzzitor/metagist.org/src"
        }
    },
    "repositories": [
        { 
            "type": "package",
            "package": {
                "name": "wuzzitor/metagist.org",
                "version": "0.1.0",
                "source": {
                    "url": "https://github.com/Wuzzitor/metagist.org.git",
                    "type": "git",
                    "reference": "0.1.0"
                }
            }
        }
    ]
}
